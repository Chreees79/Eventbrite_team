<section class="mt-5 mb-5">  
    <div class="container-fluid h-custom">
     <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <h1 class="text-center">Se connecter</h1>
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid mx-2 my-2" alt="Sample image">
        </div>
        <div class= "col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-outline mb-2">
              <%= f.email_field :email, autofocus: true, placeholder:"Entrer une adresse email valide", class:"form-control form-control-lg", id:"form3Example3" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.password_field :password, placeholder:"Mot de passe", class:"form-control form-control-lg", id:"form3Example3" %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="d-flex justify-content-between align-items-center">
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class:"form-check-input me-2" %>
                <%= f.label :remember_me, class:"form-check-label" %>
              </div>
            </div>
            <% end %>
            <div class="text-center text-lg-start pt-2">
              <div class="actions">
                <%= f.submit "Connexion", class:"btn btn-primary btn-lg px-3 mb-3" %>
              </div>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>

        </div>
        </div>
    </div>
  </section>