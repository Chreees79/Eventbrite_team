<section class=" mt-5 mb-5">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <h1 class="text-center">S'inscrire</h1>
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid mx-2 my-2" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
          
            <%= devise_error_messages! %>
            
            <div class="form-outline mb-2">
              
              <%= f.text_field :first_name, autofocus: true, placeholder:"Entrer votre prénom", class: "form-control form-control-lg" %>
            </div>
            
            <div class="form-outline mb-2">
              
              <%= f.text_field :last_name, autofocus: true, placeholder:"Entrer votre nom de famille", class: "form-control form-control-lg" %>
            </div>
            
            <div class="form-group mb-2">
              
              <%= f.text_area :description, autofocus: true, placeholder:"Description", class: "form-control", rows:"3" %>
            </div>
            
            <div class="form-outline mb-2">
              
              <%= f.email_field :email, autofocus: true, placeholder:"Entrer une adresse email valide", class: "form-control form-control-lg" %>
            </div>
            
            <div class="form-outline mb-3">
              
              <%= f.password_field :password, autofocus: true, placeholder:"Mot de passe (6 caractères mininum)", class: "form-control form-control-lg" %>
            </div>
            
            <div class="form-outline mb-3">
              
              <%= f.password_field :password_confirmation, autofocus: true, placeholder:"Confirmation mot de passe (6 caractères min)", class: "form-control form-control-lg" %>
            </div>
            
            <div class="text-center text-lg-start pt-2">
              <div class="actions">
                <%= f.submit "Inscription", class: "btn btn-primary btn-lg px-3 mx-3" %>
              </div>
            </div>

          <% end %>
          <div class="text-center text-lg-start pt-2">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
</section>