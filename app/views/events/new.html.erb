<body class="d-flex flex-column">
  <main class="flex-shrink-0">
    <section class="py-5">
      <div class="container px-5">
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
          <div class="text-center mb-5">
            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
              <h1 class="fw-bolder">Crée ton évènement !</h1>
              <p class="lead fw-normal text-muted mb-0">de batard</p>
            </div>
            <div class="row gx-5 justify-content-center">
              <div class="col-lg-8 col-xl-6">
                <%= form_with url: events_path, method: :post, local: true do |f| %>
                <div class="form-floating mb-3">
                  <div class="col">
                    <%= f.label :start_date, "Date de l'évènement:" %>
                    <%= f.datetime_field :start_date, class: "form-control" %>
                  </div>
                </div>                                                                       
                <div class="form-floating mb-3">
                  <div class="col">
                    <%= f.label :duration, "Durée (en min):"%>
                    <%= f.number_field :duration, class: "form-control" %>
                  </div>
                </div>
                <div class="form-floating mb-3">
                  <div class="col">
                    <%= f.label :title, "Titre:", class: "col-md-4 control-label" %>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>
                </div>
                <div class="form-floating mb-3">
                  <div class="col">
                  <%= f.label :description, "Décris l'évènement:" %>
                  <%= f.text_area :sdescription, class: "form-control" %>
                  </div>
                </div> 
                <div class="form-floating mb-3">
                  <div class="col">
                    <%= f.label :price, "Prix, dis c'est combien ?", class: "col-md-4 control-label" %>
                    <%= f.number_field :price, class: "form-control" %> 
                  </div>
                </div>
                <div class="form-floating mb-3">
                  <div class="col">
                    <%= f.label :location, "Lieux de l'évènement:" %>
                    <%= f.text_field :location, class: "form-control" %>
                  </div>
                </div>   
                <%= f.submit "Créer évènement", class: "btn btn-info btn-primary" %>                               
                <% end %>
              </div>                            
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>