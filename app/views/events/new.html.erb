<h3 class= "text-center h3new">Créer ton évènement :</h3> 
  <div>
    <div class= "forms">
      <%= form_with url: events_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :start_date, "Date de l'évènement", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.datetime_field :start_date, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :duration, "Durée (en min):", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.number_field :duration, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :title, "Titre:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description, lâche toi!:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix, dis c'est combien ?:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.number_field :price, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :location, "Lieux:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :location, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :event_picture, "Pose la photo de ton évènement:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
          </div>
        </div>        
      <%= f.submit "Créer évènement", class: "btn btn-info btn-primary" %>
    <% end %>
  </div>
 </div>