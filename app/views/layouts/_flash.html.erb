<% flash.each do |type, msg| %>
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade-in d-flex justify-content-between mb-0" role="alert">
          <p class="mb-0" > <%= msg %> </p>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>

<% end %>