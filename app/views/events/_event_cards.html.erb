<div class="p-3">
  <div class="row justify-content-around">
    <% @events.each do |event| %>
    <div class="col-md-4 d-flex justify-content-center mb-auto">
      <div class="card mb-3" style="max-width: 400px">
        <h3><%= link_to  "#{event.title}", event_path(event.id), class: 'card-header' %></h3>
        <%= image_tag event.event_picture, alt: 'avatar', class: "d-block user-select-none", style: "width: 356px; height: 200px", focusable:"false" if event.event_picture.attached?%>
        <% unless event.event_picture.attached? %>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="356px" height="200px" aria-label="Placeholder: Image cap"    focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
          <rect width="356px" height="200px" fill="#868e96"></rect>
          <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
        <% end %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= event.display_date(event.start_date) %></li>
          <li class="list-group-item"><%= event.duration %> minutes</li>
          <li class="list-group-item"><%= event.price %> â‚¬</li>
        </ul>
        <div class="card-body">
          <%= link_to  "Event informations", event_path(event.id), class: 'card-link' %>
        </div>
        <div class="card-footer text-muted">
          <img class="rounded-circle me-3" src="https://picsum.photos/40/40" alt="profile_picture" />
          <%= event.admin.first_name %> <%= event.admin.last_name %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


